{
  "name": "mobi360-api",
  "version": "1.0.0",
  "description": "Mobility Ops 360 - Cloudflare Workers API Backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "deploy:staging": "wrangler deploy --env staging",
    "db:migrate": "wrangler d1 execute mobi360-development-db --file=./migrations/001_initial_schema.sql",
    "db:migrate:production": "wrangler d1 execute mobi360-production-db --file=./migrations/001_initial_schema.sql",
    "db:seed": "wrangler d1 execute mobi360-development-db --file=./migrations/seed_data.sql",
    "logs": "wrangler tail",
    "logs:production": "wrangler tail --env production",
    "test": "vitest",
    "test:e2e": "cd tests && jest e2e --runInBand",
    "test:api": "cd tests && jest api --runInBand",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "jose": "^5.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250803.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "vitest": "^1.6.1",
    "wrangler": "^4.24.0"
  },
  "keywords": [
    "taxi",
    "mobility",
    "ai",
    "voice",
    "dispatch",
    "cloudflare-workers"
  ],
  "author": "Mobility Ops 360 Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mobi360.git"
  }
}
