# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_size = 2

[*.{java,kt}]
indent_size = 4

[*.{swift,m,h}]
indent_size = 4

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[*.{dart}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[{package.json,*.yml,*.yaml}]
indent_size = 2

[*.sql]
indent_size = 2

[*.proto]
indent_size = 2