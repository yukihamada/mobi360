{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./backend/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "backend/**/*.js",
    "components/**/*.js",
    "config/**/*.js",
    "types/**/*.ts",
    "tests/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend/flutter_app",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}